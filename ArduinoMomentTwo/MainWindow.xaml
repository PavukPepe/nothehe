<Window x:Class="ArduinoMomentTwo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArduinoMomentTwo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Grid.ColumnSpan="2" x:Name="main_lable"></TextBox>
        <Button Grid.ColumnSpan="1" Grid.Row="1" x:Name="First_btn" Content="Первая кнопка(мигание)" Click="First_btn_Click" ></Button>
        <Button Grid.ColumnSpan="2" Grid.Row="2" x:Name="Second_btn" Content="Вторая кнопка(мелодия)" Click="Second_btn_Click" ></Button>
        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="Period"></ComboBox>
    </Grid>
</Window>
